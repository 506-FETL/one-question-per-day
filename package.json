{
  "name": "@one-question-per-day/workspace",
  "type": "module",
  "version": "1.8.0",
  "private": true,
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "author": "seaming",
  "scripts": {
    "dev": "run-s lint:fix lint test:run",
    "play:vue": "pnpm --filter @one-question-per-day/play-vue dev",
    "play:react": "pnpm --filter @one-question-per-day/play-react dev",
    "build:problems": "vite build && cd dist && zip -r problems.zip problems >/dev/null && cd ..",
    "lint": "eslint --config eslint.config.ts",
    "lint:fix": "eslint --fix",
    "test": "vitest --config vitest.config.ts",
    "test:run": "vitest run --config vitest.config.ts",
    "type-check": "tsc --noEmit",
    "generate-release-notes": "node scripts/generate-release-notes.js",
    "release": "dotenv -f .env run -- release-it",
    "docs:dev": "pnpm --filter @one-question-per-day/docs dev",
    "docs:build": "pnpm --filter @one-question-per-day/docs build",
    "docs:preview": "pnpm --filter @one-question-per-day/docs preview"
  },
  "dependencies": {
    "@one-question-per-day/dc-react": "workspace:*",
    "@one-question-per-day/dc-vue": "workspace:*",
    "@one-question-per-day/docs": "workspace:*",
    "@one-question-per-day/gcy-react": "workspace:*",
    "@one-question-per-day/gcy-vue": "workspace:*",
    "@one-question-per-day/pc-react": "workspace:*",
    "@one-question-per-day/pc-vue": "workspace:*",
    "@one-question-per-day/play-react": "workspace:*",
    "@one-question-per-day/play-vue": "workspace:*",
    "@one-question-per-day/seam-react": "workspace:*",
    "@one-question-per-day/seam-vue": "workspace:*",
    "@one-question-per-day/wdn-react": "workspace:*",
    "@one-question-per-day/wdn-vue": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vitepress-plugin-group-icons": "^1.6.3",
    "vue": "^3.5.19"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/archiver": "^6.0.3",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.2.4",
    "archiver": "^7.0.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "release-it": "^19.0.4",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.9.2",
    "vite": "^6.2.6",
    "vitepress": "2.0.0-alpha.12",
    "vitest": "^3.1.1"
  }
}
