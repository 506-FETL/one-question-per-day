{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "releaseNotes": "node scripts/get-release-notes.js",
    "autoGenerate": false,
    "tokenRef": "GITHUB_TOKEN",
    "web": false,
    "assets": [
      "dist/problems.zip"
    ]
  },
  "hooks": {
    "before:init": ["pnpm run dev"],
    "before:github:release": ["pnpm run build:problems"],
    "after:git:release": "echo ðŸŽ‰ Release v${version} completed!",
    "after:github:release": ["node scripts/generate-release-notes.js", "echo ðŸ“¦ GitHub release created!"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "releaseCommitMessageFormat": "chore: release v{{currentTag}}",
      "context": {
        "linkCompare": true,
        "linkReferences": true
      }
    }
  }
}
